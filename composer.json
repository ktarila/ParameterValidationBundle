{
    "name": "ktarila/parameter-validator-bundle",
    "description": "Validate Method Parameters using Symfony Validator",
    "type": "symfony-bundle",
    "require": {
        "php": ">= 8.0",
        "symfony/validator": "^6.2",
        "symfony/http-foundation": "*"
    },
    "autoload": {
        "psr-4": {
            "ktarila\\ParameterValidatorBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ktarila\\ParameterValidatorBundle\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Kenekayoro",
            "email": "ktarila@gmail.com"
        }
    ],
    "require-dev": {
        "symfony/symfony": "^6.2",
        "phpunit/phpunit": "^10.1",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "symfony/monolog-bundle": "^3.8",
        "masterminds/html5": "^2.8"
    }
}
